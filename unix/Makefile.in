SHELL=/bin/sh

#------------------------------------------------------------------------------
# Autoconfig defines that can be overridden in Config.mk

CC                = @CC@
CFLAGS            = @CFLAGS@
CXX               = @CXX@
CXXFLAGS          = @CXXFLAGS@
RANLIB            = @RANLIB@
STRIP             = @STRIP@
srcdir            = @srcdir@
srcbasedir        = @srcbasedir@
bldbasedir        = @bldbasedir@
VPATH             = @srcdir@
prefix            = @prefix@
exec_prefix       = @exec_prefix@
ARCH              = @TCL_ARCH@

#------------------------------------------------------------------------------
# Include user-editable defines.

@MAKEINCLUDE@ @MAKEQUOTE@${bldbasedir}/Config.mk@MAKEQUOTE@

#------------------------------------------------------------------------------
# Flags that were passed on the command line that are to be passed on to
# second level makes.  C++ flags are only passed to the src dir build.

PASS_FLAGS = "CC=${CC}" "CFLAGS=${CFLAGS}" "LDFLAGS=${LDFLAGS}"
PASSXX_FLAGS = ${PASS_FLAGS} "CXX=${CXX}" "CXXFLAGS=${CXXFLAGS}"

#------------------------------------------------------------------------------
# The made.tmp files are used to indicate a makefile has successfully added
# it's .o files to a library.  We need to purge the right ones one a new
# library is copied.

TCLMADE.TMP = osSupport/made.tmp src/made.tmp
TKMADE.TMP  = tksrc/made.tmp

#------------------------------------------------------------------------------

all: TCLX runtcl COMP_${TK_BUILD}

#------------------------------------------------------------------------------
# Compile the Extended Tcl library and link the Tcl shell.
#

TCLX: runtcl
	cd tools;     ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} all
	cd osSupport; ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} all
	cd src;       ${MAKE} -${MAKEFLAGS} ${PASSXX_FLAGS} all
	cd tclsrc;    ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} all
	cd tests;     ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} all
	cd src;       ${MAKE} -${MAKEFLAGS} ${PASSXX_FLAGS} checkup

#------------------------------------------------------------------------------
# Generate a wish shell {wishx} with Extended Tcl commands.
#

COMP_WISHX: runwishx
	cd tksrc;    ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} all
	cd tktclsrc; ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} all
	cd tktests;  ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} all

COMP_:

#------------------------------------------------------------------------------
# Generate scripts to point the TCLX_LIBRARY/TKX_LIBRARY environment variable
# at the local master directories so tcl & wishx can be run before installing.

runtcl:
	@echo '#!/bin/sh'                                           >runtcl
	@echo '# script for testing Tcl before installation'       >>runtcl
	@echo "TCLX_LIBRARY=${bldbasedir}/tclmaster"               >>runtcl
	@echo "TCL_PROGRAM=${bldbasedir}/src/tcl"                  >>runtcl
	@echo "export TCLX_LIBRARY TCL_PROGRAM"                    >>runtcl
	@echo "if [ \$$# = 0 ]"                                    >>runtcl
	@echo "then"                                               >>runtcl
	@echo "    exec \$$TCL_PROGRAM"                            >>runtcl
	@echo "else"                                               >>runtcl
	@echo "    exec \$$TCL_PROGRAM \"\$$@\""                   >>runtcl
	@echo "fi"                                                 >>runtcl
	chmod a+rx runtcl

runwishx:
	@echo '#!/bin/sh'                                          >runwishx
	@echo '# script for testing wishx before installation'    >>runwishx
	@echo "TCLX_LIBRARY=${bldbasedir}/tclmaster"              >>runwishx
	@echo "TKX_LIBRARY=${bldbasedir}/tkmaster"                >>runwishx
	@echo "TCL_PROGRAM=${bldbasedir}/src/tcl"                 >>runwishx
	@echo "WISHX=${bldbasedir}/tksrc/wishx"                   >>runwishx
	@echo "export TCLX_LIBRARY TKX_LIBRARY TCL_PROGRAM"       >>runwishx
	@echo "if [ \$$# = 0 ]"                                   >>runwishx
	@echo "then"                                              >>runwishx
	@echo "    exec \$$WISHX"                                 >>runwishx
	@echo "else"                                              >>runwishx
	@echo "    exec \$$WISHX \"\$$@\""                        >>runwishx
	@echo "fi"                                                >>runwishx
	chmod a+rx runwishx

#------------------------------------------------------------------------------
# Test to see if the C++ include file compiles and links.

tcl++:
	cd src;${MAKE} -${MAKEFLAGS} tcl++

#------------------------------------------------------------------------------
# Relink using shared libraries.  The libraries must be built and installed
# by hand.

shlink: TCL_SHLINK SHLINK_${TK_BUILD}

TCL_SHLINK:
	cd src;  ${MAKE} -${MAKEFLAGS} ${PASSXX_FLAGS} shlink

SHLINK_WISHX:
	cd tksrc;  ${MAKE} -${MAKEFLAGS} ${PASSXX_FLAGS} shlink

SHLINK_:

#------------------------------------------------------------------------------
# Run the tests.

test: all
	cd tests;     ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} test

ucbtests: all
	cd tests;     ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} ucbtests

extdtests: all
	cd tests;     ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} extdtests

tktest: all
	cd tktests;   ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} test

#------------------------------------------------------------------------------
# Rebuild help files.  The are shipped with TclX, but can be rebuilt if Tcl or
# Tk versions have changed.

buildhelp: buildtclhelp buildtkhelp

buildtclhelp:
	cd tclsrc;   ${MAKE} -${MAKEFLAGS} buildtclhelp

buildtkhelp:
	cd tktclsrc; ${MAKE} -${MAKEFLAGS} buildtkhelp

#------------------------------------------------------------------------------

install: all TCLXINSTALL INST_${TK_BUILD}

install-exec: all TCLXINSTALL_EXEC INST_EXEC_${TK_BUILD}

TCLXINSTALL:
	@echo ""
	@echo "   Install Extended Tcl using standard model"
	@echo ""
	cd src;       ${MAKE} -${MAKEFLAGS} install
	cd tclsrc;    ${MAKE} -${MAKEFLAGS} install
	cd man;       ${MAKE} -${MAKEFLAGS} install

TCLXINSTALL_EXEC:
	@echo ""
	@echo "   Install Extended Tcl executables using standard model"
	@echo ""
	cd src;       ${MAKE} -${MAKEFLAGS} install-exec

TKXINSTALL:
	cd tksrc;     ${MAKE} -${MAKEFLAGS} install
	cd tktclsrc;  ${MAKE} -${MAKEFLAGS} install

TKXINSTALL_EXEC:
	cd tksrc;     ${MAKE} -${MAKEFLAGS} install-exec
	cd tktclsrc;  ${MAKE} -${MAKEFLAGS} install-exec

# Targets to decide if we install wishx or not.

INST_WISHX: TKXINSTALL
INST_EXEC_WISHX: TKXINSTALL_EXEC

INST_:
INST_EXEC_:

#------------------------------------------------------------------------------
# Install Extended Tcl using the master directory model.

install-master: all MASTER-NOTE TCLXMINSTALL ${TK_BUILD}MMAYBE

install-master-exec: all MASTER-NOTE TCLXMINSTALL-EXEC ${TK_BUILD}MMAYBE-EXEC

MASTER-NOTE:
	@echo ""
	@echo "*************************************************************"
	@echo "*** TclX currently does not build symbolic links to the   ***"
	@echo "*** manual pages in the master directories.  If you need  ***"
	@echo "*** these man page links you must build them by hand.     ***"
	@echo "*************************************************************"
	@echo ""

TCLXMINSTALL:
	@echo ""
	@echo "   Install TclX using master directory model"
	@echo ""
	cd src;       ${MAKE} -${MAKEFLAGS} install-master
	cd tclsrc;    ${MAKE} -${MAKEFLAGS} install-master
	cd man;       ${MAKE} -${MAKEFLAGS} install-master

TCLXMINSTALL-EXEC:
	@echo ""
	@echo "   Install TclX executables using master directory model"
	@echo ""
	cd src;       ${MAKE} -${MAKEFLAGS} install-master-exec

TKXMINSTALL:
	cd tksrc;     ${MAKE} -${MAKEFLAGS} install-master
	cd tktclsrc;  ${MAKE} -${MAKEFLAGS} install-master
	cd man;       ${MAKE} -${MAKEFLAGS} install-tk-master

TKXMINSTALL-EXEC:
	cd tksrc;     ${MAKE} -${MAKEFLAGS} install-master-exec
	cd tktclsrc;  ${MAKE} -${MAKEFLAGS} install-master-exec

# Fake targets to decide if we install wishx or not.

MMAYBE:
MMAYBE-EXEC:

WISHXMMAYBE: TKXMINSTALL
WISHXMMAYBE-EXEC: TKXMINSTALL-EXEC

#------------------------------------------------------------------------------
# Clean up all files that were built by make.

clean:
	cd tools;     ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} clean
	cd osSupport; ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} clean
	cd src;       ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} clean
	cd tclsrc;    ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} clean
	cd tksrc;     ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} clean
	cd tktclsrc;  ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} clean
	cd tests;     ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} clean
	cd tktests;   ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} clean
	cd man;       ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} clean
	-rm -f runtcl runwishx
	-rm -rf tclmaster tkmaster

#------------------------------------------------------------------------------
# Restore to the distributed state.

distclean: clean
	cd tools;     ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} distclean
	cd osSupport; ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} distclean
	cd src;       ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} distclean
	cd tclsrc;    ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} distclean
	cd tksrc;     ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} distclean
	cd tktclsrc;  ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} distclean
	cd tests;     ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} distclean
	cd tktests;   ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} distclean
	cd man;       ${MAKE} -${MAKEFLAGS} ${PASS_FLAGS} distclean
	rm -f Makefile config.status config.cache config.log

# Disable Sun's parallel make, it doesn't get the dependencies right.
.NO_PARALLEL:
